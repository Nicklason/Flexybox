@code {
  [Parameter]
  public required bool IsOpen { get; set; }
  [Parameter]
  public required Address Address { get; set; }
  [Parameter]
  public required Contact Contact { get; set; }
}

<div class="subsection scroll-container">
  <div class="row">
    <span>@(IsOpen ? "Open" : "Closed")</span>
    <span>@Address.GetStreetAndZipCode()</span>
    <span>@Address.City</span>
  </div>
  <div class="row">
    <span><i class="fa-solid fa-mobile-screen"></i>@Contact.GetPhoneNumber()</span>
    <span><i class="fa-solid fa-at"></i>@Contact.Email</span>
    @if (@Contact.HasSupportChat) {
      <span><i class="fa-solid fa-headset"></i></span>
    }
  </div>
</div>